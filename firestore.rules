rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is the assigned staff
    function isAssignedStaff(data) {
      return request.auth != null && data.assignedStaffId == request.auth.uid;
    }

    // Helper function to check if user is the client
    function isClient(clientId) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId;
    }

    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if isAdmin() || isClient(clientId);
      allow write: if isAdmin();
    }

    match /cleanings/{cleaningId} {
      allow read: if isAdmin() || isAssignedStaff(resource.data) || isClient(resource.data.clientId);
      allow create: if isAdmin();
      allow update: if isAdmin() || (
        isAssignedStaff(resource.data) && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['serviceValue', 'teamPaymentValue', 'assignedStaffId', 'clientId', 'date'])
      ) || (
        isClient(resource.data.clientId) &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clientFeedback'])
      );
      allow delete: if isAdmin();
    }
    
    match /notifications/{notificationId} {
      allow read, write: if isAdmin();
    }
  }
}
